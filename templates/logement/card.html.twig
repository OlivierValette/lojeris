<article class="property">
    <a href="{{ path('logement_show', {'id': logement.id }) }}">
        <img src="{{ asset('build/images/' ~ logement.image)}}"
             alt="{{ logement.description }}">
        <footer class="overlay">
            <div class="info">
                <div class="tag">{{ logement.prix }}&nbsp;€</div>
                <h3>{{ logement.quartier.libelle }}</h3>
            </div>
            <div class="more-info">
                <div class="property-info">
                    <i class="fa fa-calendar"></i>
                    {{ logement.dateCreation|date('d M Y') }}
                </div>
                <div class="property-info">
                    <i class="fa fa-tag"></i>
                    {{ logement.type.libelle }}
                </div>
                <div class="property-info">
                    <i class="fa fa-expand"></i>
                    {{ logement.surface }}&nbsp;m²
                </div>
                <div class="property-info">
                    <i class="fa fa-bed"></i>
                    {{ logement.nbChambres }}
                </div>
            </div>
        </footer>
    </a>
</article>
